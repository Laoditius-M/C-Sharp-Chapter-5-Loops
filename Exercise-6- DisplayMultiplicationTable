/* ------------------ Exercise 6 - DisplayMultiplicationTable -------------------
Write an application named DisplayMultiplicationTable that displays a table of
the products of every combination of two integers from 1 through 10.
*/
//Programmer: ProgrammerFromMars

using System;
using static System.Console;
namespace exercise5
{
  class DisplayMultiplicationTable
  {
    static void Main(string[] args)
    {
      // Variable Declaration
      int product;
      
      for(int i = 1; i <= 10; i++)
      {
        for(int j = 0; j <= 10; j++)
        {
          product = i * j;
          WriteLine("{0} X {1} = {2}", i, j, product);
        }
        WriteLine("\n \n");
      }

      ReadLine(); //System pause
    }
  }
}
